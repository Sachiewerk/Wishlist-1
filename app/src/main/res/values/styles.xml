<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginPage" parent="AppTheme">
        <item name="android:background">#0084ff</item>
        <item name="colorPrimaryDark">#0084ff</item>
    </style>

    <style name="LoginPage.EditText.Title" parent="android:TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- CircleImageView-->
    <style name="AppTheme.CircleImageView" parent="AppTheme">
        <item name="android:layout_width">@dimen/image_size_medium</item>
        <item name="android:layout_height">@dimen/image_size_medium</item>
    </style>

    <style name="AppTheme.CircleImageView.Small" parent="AppTheme.CircleImageView">
        <item name="android:layout_width">@dimen/image_size_small</item>
        <item name="android:layout_height">@dimen/image_size_small</item>
    </style>

    <style name="AppTheme.CircleImageView.Large" parent="AppTheme.CircleImageView">
        <item name="android:layout_width">@dimen/image_size_large</item>
        <item name="android:layout_height">@dimen/image_size_large</item>
    </style>
    <!-- CircleImageView end-->

    <style name="AppTheme.ImageButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.BorderlessButton" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.CardViewDivider" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:src">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/default_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_medium</item>
    </style>

    <style name="SmallText" parent="android:TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MediumText" parent="android:TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LargeText" parent="android:TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>