<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_vertical_margin"
    android:layout_marginLeft="@dimen/cardview_horizontal_margin"
    android:layout_marginRight="@dimen/cardview_horizontal_margin"
    android:layout_marginTop="@dimen/cardview_vertical_margin"
    android:elevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/cardview_padding">

        <!-- Main section-->
        <RelativeLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view"
                style="@style/AppTheme.CircleImageView"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/cardview_horizontal_margin" />

            <TextView
                android:id="@+id/text_view_title"
                style="@style/MediumText"
                android:layout_toRightOf="@+id/image_view" />

            <TextView
                android:id="@+id/text_view_comment"
                style="@style/SmallText"
                android:layout_below="@+id/text_view_title"
                android:layout_toRightOf="@+id/image_view"
                android:ellipsize="end" />
        </RelativeLayout>

        <!-- Footer section-->
        <LinearLayout
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView style="@style/AppTheme.CardViewDivider" />

            <!-- Detail mode footer-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/image_button_reserve"
                    style="@style/AppTheme.ImageButton"
                    android:src="@drawable/ic_favorite_grey_600_24dp" />

                <ImageButton
                    android:id="@+id/image_button_edit"
                    style="@style/AppTheme.ImageButton"
                    android:src="@drawable/ic_mode_edit_grey_600_24dp" />

                <ImageButton
                    android:id="@+id/image_button_delete"
                    style="@style/AppTheme.ImageButton"
                    android:src="@drawable/ic_delete_grey_600_24dp" />

            </LinearLayout>

            <!-- Edit mode footer-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    style="@style/AppTheme.BorderlessButton"
                    android:text="Chancel"
                    android:gravity="start"/>

                <Button
                    style="@style/AppTheme.BorderlessButton"
                    android:text="Accept"
                    android:gravity="end"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Edit mode layout-->
        <LinearLayout
            android:id="@+id/layout_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>