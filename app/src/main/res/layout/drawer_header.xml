<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/drawer_header"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_padding_medium"
    android:paddingLeft="@dimen/default_padding_medium"
    android:paddingRight="@dimen/default_padding_medium"
    android:paddingTop="32dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_user_avatar_iw"
            android:layout_width="@dimen/image_size_medium"
            android:layout_height="@dimen/image_size_medium"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/profile_user_name_tv"
            style="@style/MediumText"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/cardview_horizontal_margin"
            android:layout_toRightOf="@+id/profile_user_avatar_iw" />

        <ImageButton
            android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_settings_white_24dp" />

    </RelativeLayout>

</LinearLayout>