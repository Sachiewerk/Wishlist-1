<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:paddingTop="32dp"
    android:paddingLeft="@dimen/cardview_padding"
    android:paddingRight="@dimen/cardview_padding"
    android:paddingBottom="@dimen/cardview_padding"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/profile_user_avatar_iw"
        android:layout_width="@dimen/circle_icon_size"
        android:layout_height="@dimen/circle_icon_size"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/profile_user_name_tv"
        style="@style/MediumText"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/profile_user_avatar_iw"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/update_user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/ic_autorenew_white_24dp" />
</RelativeLayout>